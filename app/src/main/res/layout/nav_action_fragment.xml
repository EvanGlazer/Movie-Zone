<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.evanglazer.moviezone.MainActivity">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/top25"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/home"
        android:background="@android:drawable/ic_menu_sort_by_size" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/home"
        android:background="@android:drawable/ic_menu_compass"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/featured"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@android:drawable/star_big_on"
            android:layout_alignBottom="@+id/top25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Top 25"
        android:id="@+id/textView"
        android:layout_above="@+id/top25"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/top25"
        android:layout_alignEnd="@+id/top25"
        android:layout_alignTop="@+id/top25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Home"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Featured"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:layout_alignRight="@+id/featured"
        android:layout_alignEnd="@+id/featured"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/featured"
        android:layout_alignStart="@+id/featured" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Top 25"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignRight="@+id/top25"
        android:layout_alignEnd="@+id/top25"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />
</RelativeLayout>
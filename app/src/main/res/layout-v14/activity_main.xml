<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.evanglazer.moviezone.MainActivity">

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.evanglazer.moviezone.FeaturedMovie"
        android:id="@+id/featuredMovie"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/featured_movie_fragment"
        android:layout_alignParentTop="true" />


    <fragment
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:name="com.evanglazer.moviezone.NavBar"
        android:id="@+id/navBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/featuredMovie"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/navBar"></GridLayout>

</RelativeLayout>
